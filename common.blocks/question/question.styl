.question
    background url("./question_bg.png") no-repeat center center
    height 692px

    &__title
        font-size 22px
        font-weight 500
        padding-top 64px
        padding-left 67px
        color #ffffff
        margin-bottom 42px

    &__line
        width 70px
        height 3px
        background-color #ffffff
        float left
        display inline-block
        margin-left 67px

    &__answer
        width 400px
        background-color #ffffff
        float left
        padding 30px 36px 0 36px
        margin-left 155px

    &__answer:last-child
        margin-left 30px

    &__question_text
        font-style italic

    &__answer_text
        width 339px
        font-size 15px
        line-height 24px
        margin-top: 50px
        float right
        margin-bottom: 58px

    &__answer_text:before
        content "\201c"
        color #cb5a3d
        font-size 48px
        float: left;
        margin-left: -69px;
        margin-top: 14px;

    &__link
        color #488e58
        font-size 14px
        line-height 21px
        font-weight 500
        text-decoration: none;
        border-bottom: 3px solid;
        padding-bottom: 10px;
        margin-left: 60px
        display: inline-block;
        margin-bottom: 55px;

    &__link:hover
        color #cb5a3d
