.footer
    background-color #352f29
    position relative

    &__logo
        width 70px
        height 90px
        background url("./logo_footer.png") no-repeat center center
        float: left;
        margin-left: 113px;
        margin-right 30px

    &__about
        font-size 14px
        line-height 21px
        font-weight 500
        float left
        color #ffffff
        list-style none

    &__about:before
        content ""
        position absolute
        width 2px
        height 5px
        background-color #4c8d60
        display inline-block
        left: 226px;
        top: 19px;

    &__item

    &__link
        text-decoration none;
        display block;
        color #4c8d60
        font-size 15px
        font-weight: 200

    &__input
        background-color #352f29
        border none
        line-height: 47px
        border-bottom 2px solid #4c8d60
    &__button
        font-size 14px
        line-height 21px
        color #4c8d60
        font-weight 500
        border none
        background-color #352f29
        padding: 0;
        padding-top: 10px;
